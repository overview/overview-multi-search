.when-not-editing
  a.toggle-filter(href="#", title="Filter all searches by this search")

  h5
    a.object(href='#')= query

  if nDocuments !== null
    span.count.object(href="#")= nDocuments.toLocaleString()
  else if error !== null
    span.count.error= error.message
  else
    span.count.object.spinner
      .bounce1
      .bounce2
      .bounce3

  .actions
    a.edit(href='#')
      i.fa.fa-edit
      | Edit
    a.delete(href='#')
      i.fa.fa-trash
      | Delete

.when-editing
  form(action='#', method='post', role='form')
    .input-group.input-group-sm
      input.form-control(id='search-#{id}-query', name='query', value=query, placeholder='Person, place, thing or action', required=true)
      span.input-group-btn
        button.btn.btn-primary(type='submit')
          i.fa.fa-search
          | Search
      span.input-group-btn
        button.btn.btn-default(type='reset')
          | Cancel
